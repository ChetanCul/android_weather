<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/almostWhiteGrey</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="title_settings" parent="Base.TextAppearance.AppCompat.Title">
    </style>

    <style name="subtitle_settings">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/softGreyForReading</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="separator_title_settings">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="separator_subtitle_settings">
        <item name="android:background">@color/softGreyForReading</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/softGrey</item>
    </style>

</resources>
